import java.util.ArrayList;
import java.util.Iterator;
import java.util.List;

public class Q6 {


    static class Employee{
        private int id;
        private String name;
        private String department;

        //constructor
        public Employee(int id, String name, String department){
            this.id = id;
            this.name = name;
            this.department = department;
        }

        public int getId(){
            return id;
        }

        public String getName(){
            return name;
        }

        public String getDepartment(){
            return department;
        }

        public void setId(int id){
           this.id = id;
        }

        public void setName(String name){
            this.name =  name;
        }

        public void setDepartment(String dept){
            this.department = dept;
        }
        
    }

    static class EmployeeCRUD{
        private List<Employee> Employees;
        
        public EmployeeCRUD(){
            this.Employees = new ArrayList<>();
        }

        //CREATE
        public void createEmployee(Employee employee){
            Employees.add(employee);
            //printList(Employees);
        }

        //READ
        public Employee readEmployee(int id) {
            for (Employee employee : Employees) {
                if (employee.getId() == id) {
                    return employee;
                }
            
            }
            return null;
        }

        //Update
        public void updateEmployee(int id, String newName, String newDept) {
            Employee emp = readEmployee(id);
        
            emp.setName(newName);
            emp.setDepartment(newDept);
            // printList(Employees);
            
        }

        //Delete
        public void deleteEmployee(int id) {
            Employee emp = readEmployee(id);
            if (emp != null) {
                Employees.remove(emp);
                System.out.println("Deleted: " + emp);
                printList(Employees);
            }
        }


        public void printList(List<Employee> Employees){
            for (int i = 0; i < Employees.size(); i++) {
                System.out.println(Employees.get(i).getName());
            }
        }
        }

    public static void main(String[] args){
        EmployeeCRUD emp = new EmployeeCRUD();
        emp.createEmployee(new Employee(1, "Hunar Kaur", "HR"));
        emp.createEmployee(new Employee(2, "Aditi", "SDE"));
        System.out.println(emp.readEmployee(1).getName());
        emp.updateEmployee(1, "Gurvinder" , "HRA");
        emp.deleteEmployee(2);
    }


    
    
}

